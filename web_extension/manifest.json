{
  "manifest_version": 3,
  "name": "Jarir AI Helper",
  "version": "0.1.0",
  "description": "Modern AI assistant for Jarir.com with intelligent product recommendations and support.",
  "content_scripts": [
    {
      "matches": ["https://www.jarir.com/*"],
      "js": ["dist/content.js"],
      "run_at": "document_end"
    }
  ],
  "host_permissions": [
    "https://www.jarir.com/*", 
    "http://localhost:8000/*",
    "http://127.0.0.1:8000/*"
  ],
  "permissions": ["scripting", "activeTab"],
  "web_accessible_resources": [
    {
      "resources": ["dist/*"],
      "matches": ["https://www.jarir.com/*"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
